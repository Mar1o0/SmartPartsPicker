<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>

    <style name="Text.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_white</item>
    </style>


    <style name="SearchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">#A8A6B9</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:searchHintIcon">@null</item>
        <item name="android:queryBackground">@null</item>
        <item name="android:longClickable">false</item>
        <item name="android:queryHint">@string/search</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>


    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#9F9F9F</item>
    </style>


    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>