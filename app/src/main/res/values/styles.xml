<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>

    <style name="Text.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_white</item>
    </style>


    <style name="Tabs.Article" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
<!--        <item name="tabTextAppearance">@style/MainTextAppearance</item>-->

        <item name="tabIndicator">@drawable/sh_counter_bg</item>
        <item name="tabIndicatorColor">#0B38B5</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorFullWidth">true</item>

        <item name="android:background">@null</item>
<!--        <item name="android:background">@drawable/sh_counter_bg</item>-->
<!--        <item name="android:backgroundTint">@color/white</item>-->
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>


    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>