<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_item_bg"
    android:padding="16dp">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="ivPreview,tvTitle,rbRating,tvMinPrice,space,btnVariants"
        app:flow_horizontalAlign="start"
        app:flow_verticalGap="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundedImageView" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/urbanist_semibold"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPreview" />

    <com.vlad.sharaga.domain.view.SizedRatingBar
        android:id="@+id/rbRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:fillColor="#F5BE3D"
        app:gapSize="3dp"
        app:numStars="5"
        app:rating="0"
        app:starSize="13dp" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/urbanist_regular"
        android:textColor="#A0ABB8"
        app:layout_constraintBottom_toBottomOf="@+id/rbRating"
        app:layout_constraintStart_toEndOf="@+id/rbRating"
        app:layout_constraintTop_toTopOf="@+id/rbRating" />

    <TextView
        android:id="@+id/tvMinPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_black"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="3dp" />

    <Button
        android:id="@+id/btnVariants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="@font/urbanist_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minHeight="10dip"
        android:paddingVertical="10dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:cornerRadius="@dimen/corner_radius"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>