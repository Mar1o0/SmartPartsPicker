<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_item_bg"
    android:padding="@dimen/margin_big">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPreview"
        android:layout_width="@dimen/preview_size"
        android:layout_height="90dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundedImageView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_mid"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/ivPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPreview"
        app:layout_constraintTop_toTopOf="@+id/ivPreview">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:elegantTextHeight="true"
            android:ellipsize="end"
            android:fontFamily="@font/urbanist_black"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintWidth="wrap_content_constrained" />

        <TextView
            android:id="@+id/tvDeliveryDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:autoSizeTextType="uniform"
            android:elegantTextHeight="true"
            android:ellipsize="end"
            android:fontFamily="@font/urbanist_regular"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:textColor="@color/secondary_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDeliveryPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:autoSizeTextType="uniform"
            android:elegantTextHeight="true"
            android:ellipsize="end"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/success"
            android:textSize="14sp"
            app:layout_constraintWidth="wrap_content_constrained" />

    </LinearLayout>

    <Button
        android:id="@+id/btnVariants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_mid"
        android:fontFamily="@font/urbanist_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minHeight="10dip"
        android:paddingVertical="10dp"
        android:text="@string/buy"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPreview"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>