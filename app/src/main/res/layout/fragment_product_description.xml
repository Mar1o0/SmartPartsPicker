<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.product.description.ProductDescriptionFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#21242A"
            android:clipToPadding="false">

            <Space
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPreview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin_big"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tlPreviewIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/preview_indicator"
                    app:tabBackground="@drawable/selector_pager_dot"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_semibold"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/cvPreview"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@id/cvPreview" />

            <TextView
                android:id="@+id/tvArticleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mid"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="#A0ABB8"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <com.smart.parts.picker.core.view.SizedRatingBar
                android:id="@+id/rbRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:fillColor="#F5BE3D"
                app:gapSize="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvRating"
                app:layout_constraintEnd_toStartOf="@+id/tvRating"
                app:layout_constraintTop_toTopOf="@+id/tvRating"
                app:numStars="5"
                app:rating="5"
                app:starSize="13dp" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_regular"
                android:text="(5.0)"
                android:textColor="#A0ABB8"
                app:layout_constraintBottom_toBottomOf="@+id/tvArticleId"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                app:layout_constraintTop_toTopOf="@+id/tvArticleId"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tvMinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mid"
                android:fontFamily="@font/urbanist_black"
                android:textColor="@color/success"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@+id/tvArticleId" />

            <Button
                android:id="@+id/btnVariants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_mid"
                android:fontFamily="@font/urbanist_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="10dip"
                android:paddingVertical="10dp"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/corner_radius"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@+id/tvMinPrice"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnAddToAssembly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/margin_mid"
                android:backgroundTint="@color/primary_variant"
                android:fontFamily="@font/urbanist_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="10dip"
                android:paddingVertical="10dp"
                android:text="Добавить в сборку"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/corner_radius"
                app:layout_constraintStart_toEndOf="@+id/btnVariants"
                app:layout_constraintTop_toTopOf="@+id/btnVariants"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mid"
                android:fontFamily="@font/urbanist_semibold"
                android:text="@string/description"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@+id/btnVariants" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/cvPreview"
                app:layout_constraintStart_toStartOf="@+id/cvPreview"
                app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel" />

            <HorizontalScrollView
                android:id="@+id/nsSpecifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription"
                app:layout_wrapBehaviorInParent="horizontal_only">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_big">

                    <TextView
                        android:id="@+id/tvSpecificationsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_semibold"
                        android:paddingHorizontal="26dp"
                        android:paddingVertical="8dp"
                        android:text="@string/specifications_label"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSpecifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSpecificationsLabel" />

                </LinearLayout>
            </HorizontalScrollView>

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_big"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nsSpecifications" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpiLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />
</FrameLayout>