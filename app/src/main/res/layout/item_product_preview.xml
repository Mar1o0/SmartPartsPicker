<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_item_bg"
    android:orientation="horizontal"
    android:padding="@dimen/margin_big">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPreview"
        android:layout_width="@dimen/preview_size"
        android:layout_height="@dimen/preview_size"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundedImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_mid"
        tools:ignore="RtlSymmetry">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist_semibold"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <com.smart.parts.picker.core.view.SizedRatingBar
                android:id="@+id/rbRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fillColor="#F5BE3D"
                app:gapSize="3dp"
                app:numStars="5"
                app:rating="5"
                app:starSize="13dp" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="#A0ABB8" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist_black"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnVariants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/urbanist_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="10dip"
            android:paddingVertical="10dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:cornerRadius="@dimen/corner_radius"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>
</LinearLayout>